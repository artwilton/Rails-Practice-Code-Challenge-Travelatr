<h1> <%= @destination.name%> </h1>
<h3> Last 5ish posts: </h3>
<p> <% @destination.posts.last(5).each do |post| %> </p>
    <p> <%= link_to post.title, post_path(post) %> </p>
<% end %>

<h3>Featured Post</h3>
<%= link_to @destination.featured_post.title, post_path(@destination.featured_post) %>

<h4>Blogger Average Age </h4>
<%=@destination.average_age%>